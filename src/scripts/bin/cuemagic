#!/usr/bin/env bash

set -e

for cue in *.cue; do
	file="${cue%.*}.flac"
	if [ ! -f "$file" ]; then
		file="${cue%.*}.ape"
	fi
	if [ ! -f "$file" ]; then
		echo "Nor flac nor ape file found for cue $cue"
		continue
	fi
	
	echo "cue: $cue"
	echo "file: $file"

	cuebreakpoints "$cue" | shnsplit -o flac -O always "$file"
	cuetag.sh "$cue" split-track*.flac

	for i in {01..66}; do
		f="split-track$i.flac"
		if [ ! -f "$f" ]; then
			continue
		fi
		name=`cueprint -t '%P - %T - %02n %t' -n $i "$cue"`
		mv "$f" "$name.flac"
	done
	
	del_dir="_DELETE"
	if [ ! -d "$del_dir" ]; then
		mkdir "$del_dir"
	fi
	
	mv -n "$file" $del_dir	
done

#!/usr/bin/env bash

#exec mplayer -vf pp=fd "$@" $options  && sleep 1

file=


detect_file(){
	while [ ! -z "$1" ]; do
		if [ -f "$1" ]; then
			file="$1"
			return
		fi
		shift
	done
}

detect_file "$@"


if [ "${1##*.}" = "avi" ]; then
	options="$options -input conf=input.conf"
fi


exec mplayer "$@" $options

